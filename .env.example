# ============================================================================
# MedAdhere Environment Configuration
# ============================================================================
# IMPORTANT: Never commit the actual .env file to version control!
# This .env.example file shows which variables are needed.
# ============================================================================

# ----------------------------------------------------------------------------
# Firebase Configuration (CLIENT-SAFE - Can be exposed in browser)
# ----------------------------------------------------------------------------
# Get these values from Firebase Console: https://console.firebase.google.com/
# Project Settings > General > Your apps > SDK setup and configuration
# Note: Firebase API keys are safe to expose as they're restricted by domain
VITE_FIREBASE_API_KEY=your_api_key
VITE_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=messaging_sender_id
VITE_FIREBASE_APP_ID=app_id
VITE_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# Firebase Emulator (optional - for local development)
# Set to 'true' to use Firebase emulators instead of production
# VITE_USE_FIREBASE_EMULATOR=false

# ----------------------------------------------------------------------------
# Security Configuration (CLIENT-SAFE)
# ----------------------------------------------------------------------------
# Enable/disable security features
VITE_ENABLE_AUDIT_LOGGING=true
VITE_ENABLE_RATE_LIMITING=true

# Rate limiting configuration
VITE_MAX_LOGIN_ATTEMPTS=5
VITE_LOGIN_WINDOW_MS=900000
VITE_MAX_SIGNUP_ATTEMPTS=3
VITE_SIGNUP_WINDOW_MS=3600000
VITE_MAX_RESET_ATTEMPTS=3
VITE_RESET_WINDOW_MS=3600000
VITE_LOCKOUT_DURATION=1800000

# ----------------------------------------------------------------------------
# Feature Flags (CLIENT-SAFE)
# ----------------------------------------------------------------------------
VITE_ENABLE_MFA=false
VITE_ENABLE_ENCRYPTION=false
VITE_ENABLE_SECURITY_MONITORING=true

# ----------------------------------------------------------------------------
# Pharmacy Finder Configuration
# ----------------------------------------------------------------------------
# NOTE: Pharmacy Finder now uses FREE OpenStreetMap API - NO API KEY NEEDED!
# The feature works out of the box with no configuration required.

# ----------------------------------------------------------------------------
# Stripe Configuration (CLIENT-SAFE - for premium features)
# ----------------------------------------------------------------------------
VITE_STRIPE_KEY=pk_test_your_key_here

# ============================================================================
# SERVER-ONLY VARIABLES (DO NOT PREFIX WITH VITE_)
# ============================================================================
# These variables should NEVER be exposed to the client
# They should only be used in server-side code or Cloud Functions
# ============================================================================

# Firebase Admin SDK (SERVER-ONLY)
# FIREBASE_ADMIN_SDK_KEY=your_server_side_key
# FIREBASE_SERVICE_ACCOUNT=path/to/serviceAccountKey.json

# Encryption Keys (SERVER-ONLY)
# ENCRYPTION_KEY=your_encryption_key_here
# ENCRYPTION_SALT=your_encryption_salt_here

# Audit Service (SERVER-ONLY)
# AUDIT_SERVICE_URL=https://your-audit-service.com
# AUDIT_SERVICE_API_KEY=your_audit_api_key

# Database Credentials (SERVER-ONLY)
# DB_HOST=your_database_host
# DB_USER=your_database_user
# DB_PASSWORD=your_database_password

# API Keys (SERVER-ONLY)
# SENDGRID_API_KEY=your_sendgrid_key
# TWILIO_API_KEY=your_twilio_key

# ============================================================================
# Environment-Specific Settings
# ============================================================================
# NODE_ENV=development
# NODE_ENV=production
# NODE_ENV=test
